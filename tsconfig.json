{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@db/*": ["src/db/*"],
            "@models/*": ["src/models/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@exceptions/*": ["src/exceptions/*"],
            "@enums/*": ["src/helpers/enums/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}